    </servlet>

    <servlet-mapping>
        <servlet-name>Company contacts</servlet-name>
        <url-pattern>/request-information</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error page</servlet-name>
        <jsp-file>/WEB-INF/jsp/error.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Error page</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>

</web-app>
