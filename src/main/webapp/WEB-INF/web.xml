    </servlet-mapping>

    <servlet>
        <servlet-name>Delete body</servlet-name>
        <jsp-file>/WEB-INF/jsp/body/delete.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Delete body</servlet-name>
        <url-pattern>/body/delete-body-page</url-pattern>
    </servlet-mapping>


