<web-app id="WebApp_ID" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <servlet>
        <servlet-name>Home page</servlet-name>
        <servlet-class>by.varaksa.cardealer.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home page</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Home page</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Home page</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User login auth</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>User login auth</servlet-name>
        <url-pattern>/login-auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User logout page</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/logout.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>User logout page</servlet-name>
        <url-pattern>/logout-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User register page</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/register.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>User register page</servlet-name>
        <url-pattern>/register-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Company story page</servlet-name>
        <jsp-file>/WEB-INF/jsp/company/company.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Company story page</servlet-name>
        <url-pattern>/company</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Company contacts page</servlet-name>
        <jsp-file>/WEB-INF/jsp/company/contacts.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Company contacts page</servlet-name>
        <url-pattern>/request-information</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User authenticate page</servlet-name>
        <jsp-file>/WEB-INF/jsp/company/mainMenu.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>User authenticate page</servlet-name>
        <url-pattern>/main-menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error page</servlet-name>
        <jsp-file>/WEB-INF/jsp/error.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Error page</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

</web-app>
