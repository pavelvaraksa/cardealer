<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>User controller</servlet-name>
        <servlet-class>by.varaksa.cardealer.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>User controller</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Body controller</servlet-name>
        <servlet-class>by.varaksa.cardealer.controller.BodyController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Body controller</servlet-name>
        <url-pattern>/body</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Car controller</servlet-name>
        <servlet-class>by.varaksa.cardealer.controller.CarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Car controller</servlet-name>
        <url-pattern>/car</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Dealer controller</servlet-name>
        <servlet-class>by.varaksa.cardealer.controller.DealerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Dealer controller</servlet-name>
        <url-pattern>/dealer</url-pattern>
    </servlet-mapping>





    <!--Users servlets and mappings -->
    <servlet>
        <servlet-name>Register user</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/register.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register user</servlet-name>
        <url-pattern>/register-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login user</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login user</servlet-name>
        <url-pattern>/login-auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authenticate user</servlet-name>
        <jsp-file>/WEB-INF/jsp/mainMenu.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Authenticate user</servlet-name>
        <url-pattern>/main-menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Users list</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/findAll.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Users list</servlet-name>
        <url-pattern>/find-all-users-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Update user</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/update.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Update user</servlet-name>
        <url-pattern>/user/update-user-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete user</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/delete.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Delete user</servlet-name>
        <url-pattern>/user/delete-user-page</url-pattern>
    </servlet-mapping>


    <!--Bodies servlets and mappings -->
    <servlet>
        <servlet-name>Save body</servlet-name>
        <jsp-file>/WEB-INF/jsp/body/save.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Save body</servlet-name>
        <url-pattern>/body/save-body-page</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Bodies list</servlet-name>
